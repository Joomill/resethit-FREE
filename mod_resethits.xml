    <files>
        <filename module="mod_resethits">mod_resethits.php</filename>
        <filename>index.html</filename>
        <folder>language</folder>
        <folder>Helper</folder>
        <folder>tmpl</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="articlehits"
                        type="radio"
                        label="MOD_RESETHITS_ARTICLE_HITS_TITLE"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        filter="integer"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="articlerevisions"
                        type="radio"
                        label="MOD_RESETHITS_ARTICLE_REVISIONS_TITLE"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        filter="integer"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="bannerimpressions"
                        type="radio"
                        label="MOD_RESETHITS_BANNER_IMPRESSIONS_TITLE"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        filter="integer"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="bannerclicks"
                        type="radio"
                        label="MOD_RESETHITS_BANNER_CLICKS_TITLE"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        filter="integer"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="userpassword"
                        type="radio"
                        label="MOD_RESETHITS_USER_PASSWORD_TITLE"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        filter="integer"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        class="form-select"
                />
            </fieldset>
        </fields>
    </config>

    <!-- Scripts to run on installation -->
    <scriptfile>script.php</scriptfile>

	<updateservers>
		<server type="extension" priority="1" name="Reset Hits"><![CDATA[https://www.joomill-extensions.com/index.php?option=com_rdsubs&view=updater&format=xml&cat=2]]></server>
	</updateservers>
</extension>